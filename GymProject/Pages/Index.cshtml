@page
@model IndexModel
@{
    <script src="https://kit.fontawesome.com/42b67a75fc.js" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>

    ViewData["Title"] = "Home page";
}

<body>
    <section id="title">
      <div class="row">
            <img class="img-david-laid" src="~/images/background-images/david-laid.png">
      </div>
    </section>

    <section id="features">
        <div class="row">
            <div class="feature-box col-lg-4">
                <a href="/Product#supplement">
                    <i class="icon fa-solid fa-dumbbell fa-4x"></i>
                    <h3>Certified Supplements</h3>
                    <p>Tested and working supplements</p>
                </a>
            </div>

            <div class="feature-box col-lg-4">
                <a href="/Product#program">
                    <i class="icon fa-solid fa-weight-hanging fa-4x"></i>
                    <h3>Programs for everyone</h3>
                    <p>The best programs out there</p>
                </a>
            </div>

            <div class="feature-box col-lg-4">
                <a href="/Product">
                    <i class="icon fa-solid fa-medal fa-4x"></i>
                    <h3>Elite products</h3>
                    <p>Recommended by a lot of athletes</p>
                </a>
            </div>
        </div>
    </section>


  <section id="testimonials">

    <div id="testimonial-carousel" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">
        <div class="carousel-item active">
            <h2 class="testimonial-text">Completely safe and working supplements, I mean just look at our biceps</h2>
            <em class ="TrenTwins testimonial-text">Tren Twins</em>
        </div>
        <div class="carousel-item">
            <h2 class="testimonial-text">Best programs</h2>
            <em class="Cbum testimonial-text">Cbum</em>
        </div>
      </div>
      <a class="carousel-control-prev" href="#testimonial-carousel" role="button" data-slide="prev"> 
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a> 
      <a class="carousel-control-next" href="#testimonial-carousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>

  </section>
</body>
